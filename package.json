{
  "name": "reactive-class",
  "version": "0.0.1",
  "description": "A reactive programming class",
  "repository": {
    "type": "git",
    "url": "https://github.com/jchapuis/reactive.git"
  },
  "author": "Jonas Chapuis <jonas.chapuis@nexthink.com> (http://github.com/jchapuis)",
